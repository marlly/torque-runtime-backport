  <build>
    <nagEmailAddress>turbine-torque-dev@jakarta.apache.org</nagEmailAddress>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
    <aspectSourceDirectories></aspectSourceDirectories>
    <!-- Unit test classes -->

    <unitTestPatterns>
      <unitTestPattern>include = **/*Test*.java</unitTestPattern>
      <unitTestPattern>exclude = **/BaseTestCase.java</unitTestPattern>
    </unitTestPatterns>
    <!-- Runtime unit test classes -->

    <runtimeTestClassEntries></runtimeTestClassEntries>
    <!-- J A R  R E S O U R C E S -->
    <!-- Resources that are packaged up inside the JAR file -->
    <!-- These are ant pattern sets -->

    <jarResources>
      <jarResource>include = **/*</jarResource>
    </jarResources>
    <jars></jars>
  </build>
</project>
